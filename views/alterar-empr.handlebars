<header>
  <div class="text-header-cad">
    <h3>Alterar/Remover Empréstimo</h3>
  </div>
</header>

<main>
  <section class="img-books">
    <img src="../imagens/image2.jpg" alt="livros">
  </section>
  <section class="alterar-exem">
    <form id="register" action="/alterar-empr" method="POST" novalidate enctype="multipart/form-data">
      <input type="search" placeholder="ID Empréstimo" name="id">      
      <div>
        <input class="btn btn-primary" type="submit" value="Buscar">
        <a class="btn btn-secondary" href="/alterar">Cancelar</a>
      </div>
    </form>
  </section>
  {{!-- Formulário Alterações --}}
  <section class="alt-view-empr">
    <div class="registers">
      <div class="alt-exem-cont">
        {{#each emprestimos}}
          <div class="alt-exem-div">
            <p>ID: {{id}}</p>
            <p>Data do Cadastro: {{data}}</p>
          </div>
          </div>
          <div class="alt-exem-div">
            <p>Código: {{codleitor}}</p>
            <p>Nome: {{nomeleitor}}</p>
          </div>
          <div class="alt-exem-div">
            <p>Código: {{codexemplar}}</p>
            <p>Título: {{titulo}}</p>
          </div>
          <div class="alt-exem-div">
            <p>Data Devolução: {{devolprevdata}}</p>
            <p>Status: {{status}}</p>
          </div>
          <div class="alt-exem-div">
            <p>Observações: {{observacao}}</p>
          </div>
          <div class="alt-exem-div">
            <a href="/altremov-empr/{{id}}" class="btn btn-warning">Alterar</a>
            <a href="/remove-empr/{{id}}" class="btn btn-danger">Remover</a>
          </div>
        {{/each}} 
      </div>
    </div>
  </section>
</main>

