<header>
  <div class="text-header-cad">
    <h3>Remover Livros</h3>
  </div>
</header>

<main>
  <section class="img-books">
    <img src="../imagens/image2.jpg" alt="livros">
  </section>
  {{!-- Formulário Alterações --}}
  <section class="alt-view-prat">
    <div class="alterar-prat">
      <div class="card alt-prat">
        <form action="/remover-exem" method="GET" id="register" enctype="multipart/form-data">
          <div>
            <input type="hidden" name="codexemplar" value="{{exemplar.codexemplar}}">
            <p>Código: {{exemplar.codexmplar}}</p>
            <p>Prateleira: {{exemplar.prateleira}}</p>
          </div>
          <div>
            <p>Título: {{exemplar.titulo}}</p>
          </div>
          <div>
            <p>Autor1: {{exemplar.autor1}}</p>
          </div>
          <div>
            <p>Editora: {{exemplar.editora}}</p>
            <p>ISBN: {{exemplar.isbn}}</p>
          </div>
          <div>
            <p>Status: {{exemplar.status}}</p>
          </div>
          <div id="register-obs">
            <p>Observações: {{exemplar.observacao}}</p>
          </div>
          <div>
            <input type="submit" class="btn btn-danger" value="Remover">
            <a href="/alterar" class="btn btn-secondary">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </section>
</main>

